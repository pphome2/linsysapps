#!/bin/sh
#
# SFDaemon - rendszer
#
# daemon
#

d=`dirname $0`
. $d/sfdaemon-config

#cd $BINDIR

sd=`stat --printf=%Y $FILETOLISTEN`

while true; do
	ld=`stat --printf=%Y $FILETOLISTEN`
	#echo $FILETOLISTEN $sd $ld
	if [ $ld != $sd ]; then
		#echo $sd $ld
		sd=$ld
		d=`date`
		echo "$d Program futtatÃ¡sa: $COMMAND" >> $LOGDIR/$LOGFILE
		if [ $ENABLE_MULTI_COMMAND != "0" ]; then
			comid=`cat $FILETOLISTEN`
			i=0
			for f in $COMMANDS; do
				if [ $i -eq $comid ]; then
					eval "$f";
				fi
				i=$((i+1))
			done
		else
			eval "$COMMAND";
		fi
	#else
		#echo eq
	fi
	sleep 5
done

#cd $TPATH

#
