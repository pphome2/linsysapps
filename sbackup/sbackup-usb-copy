#!/bin/bash
#
# SBackup - rendszer
#
# Lokális gép mentése:
#
# - másolat USB adathordozóra
#

d=`dirname $0`
. "$d/sbackup-init"

drv=`find /media 2>>/dev/null | grep "$USBFILENAME" | awk '{print $1 }'`

#for x in $drv; do
#	if [ -f "$x" ]; then
#		x=`echo $x | awk 'BEGIN {FS="."};{printf $1 } '`
#		cp -f -r -u "$LOCALBACKUPDIR"/* "$x" 2>>"$LOGDIR/$LOGFILE"
#		sync
#	else
#		drv2=""
#	fi
#done

x=$OLDDAY
for b in $x; do
	if [ -z "$old" ]; then
		old="$b"
	fi
done
#echo $old

cd "$LOCALBACKUPDIR"

for x in $drv; do
	if [ -f "$x" ]; then
		x=`echo $x | awk 'BEGIN {FS="."};{printf $1 } '`
		#cp -f -r -u "$LOCALBACKUPDIR"/* "$x" 2>>"$LOGDIR/$LOGFILE"
		for v in *; do
			if [ ! -d "$v" ]; then
				FS1=$(stat -c%s "$LOCALBACKUPDIR/$v")
				FS2=$(stat -c%s "$LOCALBACKUPDIR/$old/$v")
				if [ $FS1 != $FS2 ]; then
					#echo "$LOCALBACKUPDIR/$v" - "$FS1" - "$FS2"
            		cp -f -r -u "$LOCALBACKUPDIR/$v" "$x" 2>>"$LOGDIR/$LOGFILE"
		  		fi
			fi
		done
		sync
	else
		drv2=""
	fi
done

cd "$TPATH"

#
